{
  "manifest_version": 3,
  "name": "AI Chat Tracker",
  "version": "1.0",
  "description": "Track new chats/projects across AI platforms",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*", 
    "https://x.com/*",
    "https://*.x.ai/*",
    "https://script.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://x.com/*",
        "https://*.x.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}